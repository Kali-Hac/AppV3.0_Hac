<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.georgeyang.doublescroll.DoubleScrollView
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:background="#558987"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/hc"
                        android:id="@+id/imgAvatar"
                        android:layout_width="@dimen/x122"
                        android:layout_margin="@dimen/x30"
                        android:layout_height="@dimen/x122" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/imgQrCode"
                        android:src="@mipmap/yx"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/x80"
                        android:layout_margin="@dimen/x30"
                        android:layout_height="@dimen/x82" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/imgAvatar"
                        android:layout_toLeftOf="@+id/imgQrCode"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="姓名:"
                                android:textSize="@dimen/x28"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:text="一捆好葱"
                                android:layout_marginLeft="@dimen/x10"
                                android:textSize="@dimen/x28"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="@dimen/x48"
                                android:layout_width="wrap_content"
                                android:text="年龄:"
                                android:textSize="@dimen/x28"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:text="20"
                                android:id="@+id/user_age"
                                android:layout_marginLeft="@dimen/x10"
                                android:textSize="@dimen/x28"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/user_address"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/x30"
                            android:textSize="@dimen/x29"
                            android:textColor="@android:color/white"
                            android:text="广州大学城华南理工大学"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:paddingTop="@dimen/x30"
                    android:paddingBottom="@dimen/x30"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="wrap_content"
                            android:text="大二程序猿"
                            android:id="@+id/user_job"
                            android:textSize="@dimen/x30"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="身份"
                            android:layout_marginTop="@dimen/x20"
                            android:textSize="@dimen/x22"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="wrap_content"
                            android:text="18022579633"
                            android:textSize="@dimen/x28"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_number" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="手机号码"
                            android:layout_marginTop="@dimen/x20"
                            android:textSize="@dimen/x22"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="wrap_content"
                            android:text="yikunhaocong.com"
                            android:textSize="@dimen/x28"
                            android:textColor="@android:color/white"
                            android:id="@+id/user_website"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:layout_width="wrap_content"
                            android:id="@+id/fujia"
                            android:text="个人博客"
                            android:layout_marginTop="@dimen/x20"
                            android:textSize="@dimen/x22"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/layoutContentBottom"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layoutTabTitle"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x100" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/holo_green_dark"
                        />


                </LinearLayout>



                <cn.georgeyang.doublescroll.DoubleScrollViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>


        </LinearLayout>


    </cn.georgeyang.doublescroll.DoubleScrollView>

</LinearLayout>